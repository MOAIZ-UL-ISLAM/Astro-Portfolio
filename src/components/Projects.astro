---
import { Icon } from 'astro-icon/components';
import { Image } from 'astro:assets';
import Dashboard from '../assets/react-dashboard.png';
import FitnessApp from '../assets/native-app.png';
import Kanban from '../assets/kanban.jpg';
import Ajkpsc from '../assets/Ajkpsc.png';

interface Project {
  title: string;
  description: string;
  imageUrl?: any;
  tags: string[];
  demoUrl?: string;
  repoUrl?: string;
  featured?: boolean;
}

const projects: Project[] = [
  {
    title: "React dashboard",
    description: "A responsive dashboard for data visualization built with React, TypeScript, and Tailwind CSS.",
    imageUrl: Dashboard,
    tags: ["React", "TypeScript", "Tailwind"],
    demoUrl: 'https://thunderous-crepe-72ab6b.netlify.app/',
    repoUrl: "https://github.com/MOAIZ-UL-ISLAM/Dashboard_React_App",
    featured: true
  },
  {
    title: "Django Blog App",
    description: "A full stack blog  CRUD app with djnago built-in Authentication module.",
    // imageUrl: Ajkpsc,
    tags: ["Django","HTML","CSS"],
    // demoUrl: 'https://ajkpsc.vercel.app/',
    repoUrl: "https://github.com/MOAIZ-UL-ISLAM/django-blogApp",
    // featured: true
  },
  {
    title: "Job Application Platform Mern",
    description: "A website for Ajk-Psc, a local organization, built with Astro-Js.",
    // imageUrl: Ajkpsc,
    tags: ["NextJs", "MongoDB", "Express", "NodeJs", "Tailwind" ,"redux-toolkit"],
    // demoUrl: 'https://ajkpsc.vercel.app/',
    repoUrl: "https://github.com/MOAIZ-UL-ISLAM/ajkPSC",
    featured: true
  },
  {
    title: "Fitness App",
    description: "A react-native fitness app that helps users to show different exercises & track calories.",
    imageUrl: FitnessApp,
    tags: ["React-Native", "Firebase","Expo"],
    repoUrl: "https://github.com/MOAIZ-UL-ISLAM/Fitness-app-reactNative",
    featured: true
  },
  {
    title: "Ajk-Psc website",
    description: "A website for Ajk-Psc, a local organization, built with Astro-Js.",
    imageUrl: Ajkpsc,
    tags: ["AstroJs", "Ts", "Tailwind"],
    demoUrl: 'https://ajkpsc.vercel.app/',
    repoUrl: "https://github.com/MOAIZ-UL-ISLAM/ajkpsc-site",
    featured: true
  },
  {
    title: "Kanban Board",
    description: "A kanban board for task management built with Nextjs.",
    imageUrl: Kanban,
    tags: ["Nextjs", "Ts", "Tailwind"],
    demoUrl: 'https://kanban-moaiz.vercel.app/',
    repoUrl: "https://github.com/MOAIZ-UL-ISLAM/kanban-TodoApp",
    featured: true
  },
  {
    title: "Todo App",
    description: "Todo App with auth module",
    // imageUrl: Ajkpsc,
    tags: ["Django","Html","CSS"],
    // demoUrl: 'https://ajkpsc.vercel.app/',
    repoUrl: "https://github.com/MOAIZ-UL-ISLAM/todo-app-django/tree/master",
    // featured: true
  },
  {
    title: "Plenaty of Hobby,Freelance and Personal Projects",
    description: "have a look at my githib profile",
    // imageUrl: Ajkpsc,
    tags: ["Mern","Django","React native",],
    // demoUrl: 'https://ajkpsc.vercel.app/',
    repoUrl: "https://github.com/MOAIZ-UL-ISLAM",
    // featured: true
  },
];
---

<section class="py-12 sm:py-8 m-4">
  <h2 class="text-3xl font-bold tracking-tight sm:text-4xl mb-6">Projects</h2>
  <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
    {projects.map((project) => (
      <article class=" rounded-lg overflow-hidden shadow-lg border-gray-600 border-2">
        {/* Project Image or Placeholder */}
        <div class="relative aspect-video w-full overflow-hidden border-b-2  ">
          {project.imageUrl ? (
            <Image 
              src={project.imageUrl} 
              alt={project.title} 
              width={600} 
              height={337} 
              class="w-full h-full object-cover"
            />
          ) : (
            <div class="w-full h-full flex items-center justify-center border-b-2">
              <Icon name="mdi:layers-triple" class="w-16 h-16 text-slate-300 " />
            </div>
          )}
        </div>

        {/* Project Info */}
        <div class="p-6">
          <h3 class="text-xl font-semibold mb-2 ">{project.title}</h3>
          <p class=" mb-4">{project.description}</p>

          {/* Tags */}
          <div class="flex flex-wrap gap-2 mb-4">
            {project.tags.map((tag) => (
              <span class="px-2 py-1 bg-slate-900 text-white  rounded-md text-sm">
                {tag}
              </span>
            ))}
          </div>

          {/* Links */}
          <div class="flex gap-4">
            {project.demoUrl && (
              <a 
                href={project.demoUrl}
                class="flex items-center gap-2 text-blue-600 hover:text-blue-500"
                target="_blank"
                rel="noopener noreferrer"
              >
                <Icon name="mdi:link-variant" class="w-5 h-5" />
                Demo
              </a>
            )}
            {project.repoUrl && (
              <a 
                href={project.repoUrl}
                class="flex items-center gap-2 text-blue-600 hover:text-blue-500"
                target="_blank"
                rel="noopener noreferrer"
              >
                <Icon name="mdi:github" class="w-5 h-5" />
                Code
              </a>
            )}
          </div>
        </div>
      </article>
    ))}
  </div>
</section>
