---
// About.astro
interface Project {
  title: string;
  description: string;
  imageUrl: string;
}

const projects: Project[] = [
  {
    title: "Project 1",
    description: "React Dashboard",
    imageUrl: "/project1.jpg",
  },
  {
    title: "Project 2",
    description: "Description of project 2",
    imageUrl: "/project2.jpg",
  },
  // Add more projects as needed
];
---

<section class=" h-[83vh] container mx-auto px-4 py-16">
  <h1 class="text-4xl font-bold  mb-4">My Projects</h1>
  <p class="text-lg text-gray-600  mb-12">
    Here are some of the amazing projects I've worked on. Each project
    represents my skills and passion for development.
  </p>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    {
      projects.map((project) => (
        <div class="bg-white rounded-lg shadow-md overflow-hidden transition-transform hover:scale-105">
          <div class="relative h-48">
            <img
              src={project.imageUrl}
              alt={project.title}
              class="w-full h-full object-cover"
            />
          </div>
          <div class="p-6">
            <h3 class="text-xl font-semibold mb-2">{project.title}</h3>
            <p class="text-gray-600">{project.description}</p>
          </div>
        </div>
      ))
    }
  </div>
</section>
